<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">
        <com.gromyk.chart.RoundChart
                android:padding="16dp"
                android:id="@+id/sixthCircle"
                android:layout_width="180dp"
                android:layout_height="154dp"
                app:textSize="larger"
                app:percentInner="14"
                app:percentExternal="165"
                app:firstValue="value first"
                app:firstLabel="first label"
                app:secondLabel="54545455"
                app:secondValue="second value"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="@+id/fourthCircle"
                app:layout_constraintTop_toTopOf="@+id/fifthCircle"
                app:layout_constraintBottom_toBottomOf="@+id/fifthCircle"/>
        <com.gromyk.chart.RoundChart
                android:padding="16dp"
                android:id="@+id/fifthCircle"
                android:layout_width="180dp"
                android:layout_height="154dp"
                app:textSize="medium"
                app:percentInner="14"
                app:percentExternal="165"
                app:secondValue="dddddd value"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/sixthCircle" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/firstCircle"/>
        <TextView
                android:id="@+id/gradTextView"
                android:text="@string/n_n"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.gromyk.chart.RoundChart
                android:padding="16dp"
                android:id="@+id/firstCircle"
                android:layout_width="180dp"
                android:layout_height="151dp"
                app:textSize="larger"
                app:percentInner="14"
                app:percentExternal="165"
                app:mainCircleColor="@color/colorPrimaryDark"
                app:textColor="@color/colorAccent"
                app:secondGradientColorOverageExternalCircle="@color/colorAccent"
                app:firstGradientColorExternalCircle="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@id/gradTextView"
                app:firstValue="value first"
                app:firstLabel="first label"
                app:secondLabel="second label"
                app:secondValue="second value"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/fourthCircle"/>
        <com.gromyk.chart.RoundChart
                android:padding="16dp"
                android:id="@+id/secondCircle"
                android:layout_width="180dp"
                android:layout_height="154dp"
                app:textSize="larger"
                app:percentInner="14"
                app:percentExternal="165"
                app:firstValue="value first"
                app:firstLabel="first label"
                app:secondLabel="second label"
                app:secondValue="second value"
                app:layout_constraintTop_toTopOf="@+id/thirdCircle"
                app:layout_constraintBottom_toBottomOf="@+id/thirdCircle" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <com.gromyk.chart.RoundChart
                android:padding="16dp"
                android:id="@+id/thirdCircle"
                android:layout_width="180dp"
                android:layout_height="154dp"
                app:textSize="small"
                app:percentInner="14"
                app:percentExternal="165"
                app:firstValue="value first"
                app:firstLabel="zcccccccaaa"
                app:secondLabel="second abel"
                app:secondValue="second value"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/secondCircle" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/fifthCircle"/>
        <com.gromyk.chart.RoundChart
                android:padding="16dp"
                android:id="@+id/fourthCircle"
                android:layout_width="180dp"
                android:layout_height="154dp"
                app:textSize="larger"
                app:percentInner="050"
                app:percentExternal="45"
                app:layout_constraintEnd_toEndOf="parent"
                app:firstValue="value first"
                app:firstLabel="first label"
                app:secondLabel="second label"
                app:secondValue="second value"
                app:layout_constraintTop_toTopOf="@+id/firstCircle"
                app:layout_constraintBottom_toBottomOf="@+id/firstCircle"/>
        <com.gromyk.chart.RoundChart
                android:padding="16dp"
                android:id="@+id/someCircle1"
                android:layout_width="180dp"
                android:layout_height="154dp"
                app:textSize="larger"
                app:percentInner="14"
                app:percentExternal="165"
                app:firstValue="value first"
                app:firstLabel="first label"
                app:secondLabel="second label"
                app:secondValue="second value"
                app:layout_constraintTop_toBottomOf="@id/thirdCircle"
                app:layout_constraintStart_toStartOf="@+id/thirdCircle"/>
        <com.gromyk.chart.RoundChart
                android:padding="16dp"
                android:id="@+id/someCircle"
                android:layout_width="180dp"
                android:layout_height="154dp"
                app:textSize="larger"
                app:percentInner="14"
                app:percentExternal="165"
                app:firstValue="value first"
                app:firstLabel="first label"
                app:secondLabel="second label"
                app:secondValue="second value"
                app:layout_constraintTop_toBottomOf="@id/someCircle1"
                app:layout_constraintStart_toStartOf="@+id/thirdCircle"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>